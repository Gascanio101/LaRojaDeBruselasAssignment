<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_playerList_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:civ_border_color="@color/red_500"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_homeName"
        style="@style/primaryTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_playerList_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView_playerList_picture"
        app:layout_constraintTop_toTopOf="@+id/imageView_playerList_picture" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_goalIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        app:civ_border_color="@color/red_500"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_homeName"
        app:layout_constraintTop_toBottomOf="@+id/textView_homeName" />

    <TextView
        android:id="@+id/textView_goalsScored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/primaryTextStyle"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_goalIcon"
        app:layout_constraintEnd_toStartOf="@+id/imageView_goalIcon"
        app:layout_constraintTop_toTopOf="@+id/imageView_goalIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>